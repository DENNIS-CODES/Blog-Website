@model Blog_Website_MVC.Blog

@{
    ViewBag.Title = "Uploadblog";
}

<h2>Uploading</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Blog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.BCategory, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.BCategory, new { htmlAttributes = new { @class = "form-control"} })*@

                <select name="@Html.nameFor(model => model.BCategory)">
                    <option value="" selected disabled>-- Selected Blog Category --</option>
                    <option>Programming</option>
                    <option>Science</option>
                    <option>Food</option>
                </select>
                @Html.ValidationMessageFor(model => model.BCategory, "", new { @class = "text-danger"})
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Btitle, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Btitle, new { htmlAttributes = new { @class = "form-control" }})
                @Html.ValidationMessageFor(model => model.Btitle, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BDesc, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.BDesc, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.BDsec, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BUrl, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.BUrl, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.BUrl, "", new { @class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Insert Blog" class="btn btn-default" />
            </div>
        </div>
        <h3>@ViewBag.message</h3>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @scripts.Render("~/bundles/jqueryval")
}